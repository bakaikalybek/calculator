<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Viewer">

    <TextView
        android:fontFamily="@font/sansthin"
        android:layout_height="210dp"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:background="#616161"
        android:textSize="70sp"
        android:text="0"
        android:textColor="#ffffff"
        android:textAlignment="viewEnd"
        android:id="@+id/editText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:fontFamily="@font/sansmedium"
        android:id="@+id/bracketsOpen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="("
        android:gravity="center"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:background="#0D47A1"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText"
        app:layout_constraintEnd_toStartOf="@id/bracketsClose"
        app:layout_constraintBottom_toTopOf="@id/seven"/>

    <TextView
        android:fontFamily="@font/sansmedium"
        android:id="@+id/bracketsClose"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=")"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        android:background="#0D47A1"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/bracketsOpen"
        app:layout_constraintEnd_toStartOf="@id/nine"
        app:layout_constraintTop_toBottomOf="@id/editText"
        app:layout_constraintBottom_toTopOf="@id/eight"/>

    <TextView
        android:fontFamily="@font/sansmedium"
        android:id="@+id/buttonAC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="CLEAR"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:background="#0D47A1"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/bracketsClose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText"
        app:layout_constraintBottom_toTopOf="@id/nine"/>

